{
  "name": "hermes-windows-build-scripts",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "JavaScript build scripts for Hermes Windows",
  "scripts": {
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js",
    "format:check": "prettier --check *.js",
    "lint:format": "npm run format && npm run lint:fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
